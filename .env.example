# Kafka source
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=clean_trades
KAFKA_STARTING_OFFSETS=latest

# Streaming behavior
WATERMARK=2 minutes
SINK=console

# Output paths (when SINK=parquet)
OUTPUT_DIR=./data/spark_out
CHECKPOINT_DIR=./data/checkpoints

# Spark app
SPARK_APP_NAME=clean-trades-streaming
SPARK_MASTER=local[*]
